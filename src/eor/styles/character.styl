vendor(prop, args)
  -webkit-{prop} args
  {prop} args

flexe = -webkit-flex
align-self()
  -webkit-align-self arguments
align-items()
  -webkit-align-items arguments
flex() 
  -webkit-flex arguments
flex-direction() 
  -webkit-flex-direction arguments
transition()
  -webkit-transition arguments
order() 
  -webkit-order arguments
transform()
  -webkit-transform arguments
transform-style()
  -webkit-transform-style arguments
user-select()
  -webkit-user-select arguments
  user-select arguments

.character
  display flexe
  align-items flex-end
  flex auto

  .spacer 
    flex 1.5
    .buttons
      pointer-events auto
      margin 20px
      i 
        width 250px
        height 250px
        padding 20px
        background-color #222
        border 2px solid black
        border-radius 5px
        color white
      i:hover
        background-color #444
        cursor pointer
      i:active
        background-color #000
        color white
  .chat 
    flex 1
    pointer-events auto
    min-width 250px
    margin 1em  
    font-size 1.5em
    background-color white
    border 4px solid black
    border-radius 15px
    padding 5px
    font-family 'Graduate'
    #space 
      position relative
      margin 5px
      text-align center
      -webkit-animation cursorblink .8s infinite
      display none
    .cursor
      -webkit-animation cursorblink .8s infinite
      i.small
        font-size .8em
  .avatar
    pointer-events auto
    background-size 100% 100%

#viera.avatar
  width 200*1.5px
  height 427*1.5px
  background-image url(../images/viera/viera.png)
  .ears 
    height 300px
    cursor pointer
  .face 
    margin-left 54px
    margin-top 23px
    div 
      position absolute
      background-size 100% 100%
    .mouth
      margin-left 25px
      margin-top 49px
    .eyes 
      background-image url(../images/viera/eyesnormal.png)
      width 48*1.5px
      height 18*1.5px
  
  .face.blink
    .eyes
      background-image url(../images/viera/eyesblink.png) !important
      width 38*1.5px !important
      height 8*1.5px !important
      margin 10px
  
  .face.excited
    .eyes
      background-image url(../images/viera/eyesexcited.png)
      width 37*1.5px
      height 15*1.5px
      margin 5px
  
  .face.talk
    .mouth 
      background-image url(../images/viera/mouthtalk.png) !important
      width 11*1.5px !important
      height 5*1.5px !important

  .face.sad 
    .mouth 
      background-image url(../images/viera/mouthsad.png)
      width 11*1.5px
      height 3*1.5px

  .face.happy
    .mouth
      background-image url(../images/viera/mouthhappy.png)
      width 11*1.5px
      height 4*1.5px

@-webkit-keyframes cursorblink
  0% {opacity: 1}
  50% {opacity: 0}
  100% {opacity: 1}