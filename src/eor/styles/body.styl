body, html
  margin 0px
  padding 0px
  height 100%
  overflow hidden
  background -webkit-linear-gradient(top, #1e5799 0%,#2989d8 30%,#207cca 60%,#7db9e8 100%)

#top, #main
  height 100%
  width 100%
  display -webkit-flex

#bar 
  position absolute
  z-index 1
  //background: -webkit-linear-gradient(top, #4c4c4c 0%,#595959 12%,#666666 25%,#474747 39%,#2c2c2c 50%,#000000 51%,#111111 60%,#2b2b2b 76%,#1c1c1c 91%,#131313 100%)
  height 70px
  width 100%
  bottom 0px

#top 
  position absolute
  z-index 100
  pointer-events none

@-webkit-keyframes jitter
  0% {background-position right -350px top -350px;opacity .3}
  100% {background-position right -150px top -150px; opacity .6}

#scene
  height 100%
  width 100%
  > div 
    display -webkit-flex
    height 100%
    width 100%

  #titleScene.hideTop
    margin-top -57.3%

  #bahamut
    background-image url("../images/bahamut/bg.jpg")
    background-size cover
    background-position center
    display -webkit-flex
    
    > div
      background-image url("../images/bahamut/bg-bright.jpg")
      background-size cover
      background-position center
      -webkit-flex auto
      -webkit-animation 3s innerglow infinite
      -webkit-animation-direction alternate
      -webkit-animation-timing-function linear

  #titleScene 
    margin-top 0%
    -webkit-transition 1s
    -webkit-animation-timing-function linear
    display -webkit-flex
    background url(../images/fflogo.png) no-repeat
    background-position -50px -50px
    background-size 800px 589px
    #titlePage
      display -webkit-flex
      -webkit-flex-direction column
      -webkit-flex auto
      .spacer
        -webkit-flex 1
      .title 
        -webkit-flex 1
        -webkit-align-self center
        z-index 1
        position relative
        font-family 'Graduate'
        color white
        text-shadow 2px 2px black
        font-size 4em

      .stories
        -webkit-flex 1
        display -webkit-flex
        -webkit-animation .5s movefromoffscreen 
        -webkit-animation-timing-function cubic-bezier(0.1, 0.7, .8, 0.1)
        > div 
          margin 50px
          background-color #222 
          border 10px solid black
          border-radius 25px
          height 200px
          cursor pointer
          width 200px
          -webkit-transition 2s
        
        > div:hover
          -webkit-animation .5s hovereffect infinite
          -webkit-animation-direction alternate

        .blank
          color #ccc
          font-size 50pt
          -webkit-text-stroke 4px black
          i 
            margin 35px

        #bahamutStory 
          position relative
          background-image url("../images/bahamut/bg.jpg")
          background-size 200% 150%
          background-position center
          display -webkit-flex
          
          > div
            background-image url("../images/bahamut/bg-bright.jpg")
            background-size 200% 150%
            background-position center
            -webkit-flex auto
            -webkit-animation 3s innerglow infinite
            -webkit-animation-direction alternate

@-webkit-keyframes innerglow
  0% {opacity .1}
  100% {opacity .5}
@-webkit-keyframes hovereffect
  0% {-webkit-box-shadow 0 0 15px white}
  100% {-webkit-box-shadow 0 0 35px white}
@-webkit-keyframes movefromoffscreen
  0% {opacity 0}
  100% {opacity 1}